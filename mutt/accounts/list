# vim: ft=muttrc
set realname    = $my_list_realname
set from        = $my_list_from

set imap_user   = $my_list_imap_user
set imap_pass   = $my_list_imap_pass
set folder      = $my_list_folder
set spoolfile   = $my_list_spoolfile
set record      = $my_list_record
set postponed   = $my_list_postponed
set mbox        = $my_list_mbox

set smtp_url    = $my_list_smtp_url
set smtp_pass   = $my_list_smtp_pass

set pgp_sign_as = $my_list_pgp_sign_as

account-hook $my_list_folder 'set imap_user=$my_list_imap_user; set imap_pass=$my_list_imap_pass; set pgp_sign_as=$my_list_pgp_sign_as'
