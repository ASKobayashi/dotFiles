# vim: ft=muttrc
set realname    = $my_work_realname
set from        = $my_work_from

set imap_user   = $my_work_imap_user
set imap_pass   = $my_work_imap_pass
set folder      = $my_work_folder
set spoolfile   = $my_work_spoolfile
set record      = $my_work_record
set postponed   = $my_work_postponed
set mbox        = $my_work_mbox

set smtp_url    = $my_work_smtp_url
set smtp_pass   = $my_work_smtp_pass

set pgp_sign_as = $my_work_pgp_sign_as

account-hook $my_work_folder 'set imap_user=$my_work_imap_user; set imap_pass=$my_work_imap_pass; set pgp_sign_as=$my_work_pgp_sign_as'
